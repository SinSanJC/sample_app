<li class="py-2" id="micropost-<%= micropost.id %>">

<div class="media">
  <%= link_to gravatar_for(micropost.user, size: 50, cl: "rounded-circle"), micropost.user, class: "d-flex align-self-start mr-3" %>
  <div class="media-body">
    <h5 class="mt-0 text-capitalize"><%= link_to micropost.user.name, micropost.user %></h5>
    <p><%= micropost.content %></p>
    <p class="text-right mb-0 font-weight-light">Posted <%= time_ago_in_words(micropost.created_at) %> ago.
	    <% if current_user?(micropost.user) %>
	      <%= link_to "Delete", micropost, method: :delete, data: { confirm: "You sure?" }, class: "badge badge-danger" %>
	    <% end %>
    </p>
  </div>
</div>
</li>

