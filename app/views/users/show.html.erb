<% provide(:title, @user.name) %>

<div class="row">
  <aside class="col-md-4 mb-3">
    <%= render 'shared/user_info' %>
  </aside>

  <div class="col-md-8">
    <% if @user.microposts.any? %>
      <h3 class="text-center">(<%= @user.microposts.count %>) Microposts of <%= @user.name %> </h3>
      <hr>
      <ol class="list-unstyled microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>